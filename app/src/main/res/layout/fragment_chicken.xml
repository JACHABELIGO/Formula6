<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chickenFragment">

    <RelativeLayout
        android:id="@+id/relativeChicken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/feedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poultry Feed Recipe"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/chick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedTitle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card1">

                <ImageView
                    android:id="@+id/chickImage"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/ic_chicken" />

                <TextView
                    android:id="@+id/chickMash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="15dp"
                    android:text="Chick Mash (Week 1 to 2)"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/chick"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/grower"
            android:layout_below="@+id/chick"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card1">

                <ImageView
                    android:id="@+id/growerImage"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/ic_chicken" />

                <TextView
                    android:id="@+id/growerMash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingTop="20dp"
                    android:text="Grower Mash (Week 1 to 2)"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/layer"
            android:layout_below="@+id/grower">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card1">

                <ImageView
                    android:id="@+id/Layer"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/ic_chicken" />

                <TextView
                    android:id="@+id/layermash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingTop="20dp"
                    android:text="Layer Mash"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>